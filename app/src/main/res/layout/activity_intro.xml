<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_blue_dark"
    tools:context=".activities.IntroActivity">

    <VideoView
        android:id="@+id/videoview_intro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <View
        android:id="@+id/view_support_start"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:background="@drawable/background_intro_start"
        app:layout_constraintBottom_toBottomOf="@id/videoview_intro"/>
    <View
        android:id="@+id/view_support_end"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:background="@drawable/background_intro_end"
        app:layout_constraintTop_toTopOf="@id/videoview_intro"/>

</androidx.constraintlayout.widget.ConstraintLayout>